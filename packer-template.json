{
  "variables": {
    "project_id": "",
    "source_image": "debian-8-jessie-v20170327"
  },
  "builders": [{
    "type": "googlecompute",
    "project_id": "{{user `project_id`}}",
    "zone": "us-west1-a",
    "machine_type": "f1-micro",
    "preemptible": false,
    "source_image": "{{user `source_image`}}",
    "image_name": "debian-sid-v{{isotime \"20060102-150405\"}}",
    "image_family": "debian-sid",
    "image_description": "Debian sid (source image: {{user `source_image`}})",
    "ssh_username": "packer"
  }],
  "provisioners":[
    {
      "type": "file",
      "source": "scripts",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "inline": [
        "sudo cp -a /etc/ntp.conf /var/tmp/ntp.conf.jessie",
        "sudo apt-get update",
        "sudo DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends etckeeper",
        "sudo DEBIAN_FRONTEND=noninteractive apt-get remove -y --purge ntp unattended-upgrades"
      ],
      "expect_disconnect": false
    },
    {
      "type": "file",
      "source": "sources.list",
      "destination": "/tmp/sources.list"
    },
    {
      "type": "shell",
      "inline": [
        "sudo install -m 644 -o root -g root /tmp/sources.list /etc/apt/sources.list",
        "sudo DEBIAN_FRONTEND=noninteractive etckeeper commit 'apt: updated to sid'",
        "sudo apt-get update",
        "sudo DEBIAN_FRONTEND=noninteractive apt-get dist-upgrade -y --no-install-recommends --auto-remove --purge",
        "sudo DEBIAN_FRONTEND=noninteractive apt-get install -y ntp",
        "sudo cp -a /var/tmp/ntp.conf.jessie /etc/ntp.conf",
        "sudo etckeeper commit 'ntp: copied original ntp.conf from debian-8 image family'"
      ],
      "expect_disconnect": false
    },
    {
      "type": "file",
      "source": "google-cloud.list",
      "destination": "/tmp/google-cloud.list"
    },
    {
      "type": "shell",
      "inline": [
        "sudo install -m 644 -o root -g root /tmp/google-cloud.list /etc/apt/sources.list.d/google-cloud.list",
        "sudo DEBIAN_FRONTEND=noninteractive etckeeper commit 'apt: s/jessie/stretch/g in google-cloud.list'",
        "sudo apt-get update",
        "sudo DEBIAN_FRONTEND=noninteractive apt-get dist-upgrade -y --no-install-recommends --auto-remove --purge",
        "sudo DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends google-compute-engine-init-jessie- google-compute-engine-init-stretch google-compute-engine-jessie- google-compute-engine-stretch google-config-jessie- google-config-stretch"
      ],
      "expect_disconnect": false
    },
    {
      "type": "shell",
      "inline": [
        "python /tmp/scripts/mk-manifest.py"
      ],
      "expect_disconnect": false
    },
    {
      "type": "file",
      "source": "/tmp/packages.jsonl",
      "destination": "manifest/packages.jsonl",
      "direction": "download"
    },
    {
      "type": "file",
      "source": "/tmp/packages.txt",
      "destination": "manifest/packages.txt",
      "direction": "download"
    }
  ]
}

